<div class="containar">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shops/list', user: @shop.user %>
      <%= render 'shops/post', shop: @shop %>
    </div>
    <div class="col-lg-9">
        <h2>shop detail</h2>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= attachment_image_tag @shop.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no2_image.jpg" %>
                <%=link_to @shop.user.name,user_path(@user.id)%>
              </td>
              <td><%=@shop.shop_name%></td>
              <td><%=@shop.caption %></td>
            <% if @shop.user == current_user %>
              <td>
                <button type="button" class="btn btn-success btn-sm">
                <%= link_to "edit", edit_shop_path(@shop.id)%>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger btn-sm">
                  <%= link_to "destroy",shop_path(@shop.id), method: :delete %>
                </button>
              </td>
            <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>